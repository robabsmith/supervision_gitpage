issn = {0954349X},
journal = {Structural Change and Economic Dynamics},
keywords = {Instability,Leverage ratios,Margins of safety,Minskyan macroeconomic analysis},
title = {{Margins of safety and instability in a macrodynamic model with Minskyan insights}},
year = {2014}
}
@article{ISI:000323943500009,
abstract = {This paper develops a stock-flow-consistent macroeconomic model where
